  background-color: #10b981;
  color: white;
  font-weight: bold;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  background-color: #059669;
}

button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

p {
  color: #ef4444;
  font-size: 0.85rem;
  margin: 0;
}

h2 {
  text-align: center;
  color: #d3d8e3;
  font-family: sans-serif;
  margin-bottom: 20px;
}
//validation/deliverySchema.js
import * as Yup from "yup";

export const deliverySchema = Yup.object({
  fullName: Yup.string()
    .trim()
    .required("Full name is required"),

  email: Yup.string()
    .trim()
    .email("Invalid email")
    .required("Email is required"),

  phone: Yup.string()
    .trim()
    .matches(/{10,15}/, "Enter a valid phone number")
    .required("Phone number is required"),

  address: Yup.string()
    .trim()
    .required("Delivery address is required"),

  deliveryType: Yup.string()
    .oneOf(["standard", "express"], "Select a delivery type")
    .required("Delivery type is required"),

  paymentMethod: Yup.string()
    .oneOf(["card", "cash"], "Select a payment method")
    .required("Payment method is required"),

  terms: Yup.boolean()
    .oneOf([true], "You must agree to the terms")
    .required("You must agree to the terms"),
});

8.Implement instant error feedback:-
//App.jsx
import React from "react";
import InstantForm from "./components/InstantForm";
import "./App.css";

export default function App() {
  return (
    <div className="container">
      <InstantForm />
    </div>
  );
}
//components/InstantForm.jsx
import React from "react";
import { useForm } from "react-hook-form";
import { yupResolver } from "@hookform/resolvers/yup";
import {instantSchema } from "../validation/instantSchema";

export default function InstantForm() {
  const {
    register,
    handleSubmit,
    formState: { errors },
  } = useForm({
    resolver: yupResolver(instantSchema),
    mode: "onChange", 
    reValidateMode: "onChange",
  });

  const onSubmit = (data) => {
    alert("Form submitted:\n" + JSON.stringify(data));
  };

  return (
    <form onSubmit={handleSubmit(onSubmit)} noValidate>
      <h2>Student Log-In Form</h2>

      <input
        placeholder="Name"
        {...register("name")}
        className={errors.name ? "invalid" : "valid"}
      />
      <p>{errors.name?.message}</p>
      <br/>

      <input
        placeholder="Email"
        {...register("email")}
        className={errors.email ? "invalid" : "valid"}
      />
      <p>{errors.email?.message}</p>
      <br/>

      <input
        type="password"
        placeholder="Password"
        {...register("password")}
        className={errors.password ? "invalid" : "valid"}
      />
      <p>{errors.password?.message}</p>
      <br/>

      <button type="submit">Register</button>
      <br/>
    </form>
  );
  
}
//validation/instantSchema.js
import * as Yup from "yup";

export const instantSchema = Yup.object({
  name: Yup.string()
    .trim()
    .required("Name is required"),

  email: Yup.string()
    .trim()
    .email("Invalid email address")
    .required("Email is required"),

  password: Yup.string()
    .min(6, "Password must be at least 6 characters")
    .required("Password is required"),
});
//App.css
.container {
  max-width: 400px;
  margin: 100px auto;
  font-family: sans-serif;
  background-color: rgb(158, 214, 208);
}

form {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
  transition: border-color 0.2s;
}

input.invalid {
  border-color: #d82424;
}
input.valid {
  border-color: #10b981;
}
